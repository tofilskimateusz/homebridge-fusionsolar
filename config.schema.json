{
  "pluginAlias": "HomebridgeFusionsolar",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Example Dynamic Platform"
      },
      "appUrl": {
        "title": "FusionSolar app url",
        "type": "string",
        "required": false,
        "default": "https://eu5.fusionsolar.huawei.com"
      },
      "login": {
        "title": "FusionSolar app login",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "FusionSolar app password",
        "type": "string",
        "required": true
      },
      "batteryLowLevelPercentage": {
        "title": "Battery low level threshold [%]",
        "type": "string",
        "required": false,
        "default:": "20"
      }
    }
  }
}
